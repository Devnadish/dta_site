generator client {
  provider        = "prisma-client-js"
  // previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model contactus {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  mobile    String
  message   String
  createdAt DateTime @default(now())
}

model expressQuery {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  brief     String
  mobile    String
  createdAt DateTime @default(now())
}


