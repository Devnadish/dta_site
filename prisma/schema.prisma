generator client {
  provider        = "prisma-client-js"
  // previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model contactus {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  mobile    String
  message   String
  createdAt DateTime @default(now())
}

model expressQuery {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  brief     String
  mobile    String
  createdAt DateTime @default(now())
}


model Visitor {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  ip         String   @unique
  country    String?  
  city       String?  
  region     String?  
  org        String?  
  timezone   String?  
  visitCount Int      @default(1)  // Track the number of visits
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Crombo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  company      String
  name      String
  mobile    String
  email     String
  note String
  createdAt DateTime @default(now())
}

model Price {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  mobile    String
  email     String
  packageTtype  String
  createdAt DateTime @default(now())
}
